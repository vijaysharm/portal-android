<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/studySelectorActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatasetSelectorActivity" >

    <ImageView
        android:id="@+id/diagnosticDisclaimerImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="TODO"
        android:padding="4dp"
        android:scaleType="center"
        android:src="@drawable/disclaimer_icon" />
    
    <TextView
        android:id="@+id/diagnosticDisclaimerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/diagnosticDisclaimerImageView"
        android:text="@string/diagnostic_disclaimer" />
    
    <GridView
        android:id="@+id/datasetGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/diagnosticDisclaimerTextView"
        android:numColumns="auto_fit" >

    </GridView>

</RelativeLayout>
